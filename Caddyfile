# Caddyfile for Windows production deployment
# Configured for office network access on 192.168.1.2

# Main application server - accessible from office network
:8080 {
    # Django API routes (highest priority)
    handle /api/* {
        reverse_proxy localhost:8000
    }

    # Django admin routes
    handle /admin* {
        reverse_proxy localhost:8000
    }

    # Django media files handling - backend/media folder
    handle /media/* {
        root * backend
        file_server
    }

    # Django static files (if needed as fallback)
    handle /django-static/* {
        root * backend/staticfiles
        file_server
    }

    # Next.js built assets
    handle /_next/* {
        reverse_proxy localhost:3000
    }

    # All other routes go to Next.js frontend
    handle {
        reverse_proxy localhost:3000
    }

    # Enable compression for better performance
    encode gzip

    # Security headers
    header {
        # Security headers for office environment
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        
        # Remove server information
        -Server
    }

    # Logging for monitoring
    log {
        output file logs/caddy_access.log {
            roll_size 10MB
            roll_keep 5
        }
        format json
    }

    # Error handling
    handle_errors {
        @502 expression {http.error.status_code} == 502
        respond @502 "Application server is temporarily unavailable. Please try again in a moment." 502
    }
}

# Optional: Redirect HTTP to HTTPS (uncomment if using domain name)
# http://{$DOMAIN} {
#     redir https://{$DOMAIN}{uri}
# }
