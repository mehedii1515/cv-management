# Docker Environment Configuration for Office Server

# Server Configuration
SERVER_IP=YOUR_OFFICE_SERVER_IP
DEBUG=False

# Django Settings
SECRET_KEY=your-super-secret-key-for-production-change-this
ALLOWED_HOSTS=localhost,127.0.0.1,YOUR_OFFICE_SERVER_IP,*

# PostgreSQL Database Configuration
DB_NAME=resume_parser
DB_USER=resume_parser_user
DB_PASSWORD=secure_production_password_change_me
DB_HOST=postgres
DB_PORT=5432

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
AI_PROVIDER=openai

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://YOUR_OFFICE_SERVER_IP/api

# File Upload Settings
MAX_UPLOAD_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,docx,txt,doc

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# MCP Server Configuration
MCP_SERVER_PORT=3001
